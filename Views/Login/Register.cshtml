@model Senior_Project.Models.Register

<!--Title tab-->
@{
    ViewData["Title"] = "Create";
}
<link href="~/css/StyleSheet.css" rel="stylesheet" type="text/css" />

<!-- Header for form-->
<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <!--Registration Form-->
        <form asp-action="Register">
            <!-- Jquery helper for displaying model errors on client side-->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- First Name Input -->
            <div class="form-group">
                <!-- Label for first name -->
                <label asp-for="firstName" class="control-label"></label>
                <!-- Input field for first name -->
                <input asp-for="firstName" class="form-control" />
                <!-- Validation message for first name -->
                <span asp-validation-for="firstName" class="text-danger"></span>
            </div>

            <!-- Last Name Input -->
            <div class="form-group">
                <!-- Label for last name -->
                <label asp-for="lastName" class="control-label"></label>
                <!-- Input field for last name -->
                <input asp-for="lastName" class="form-control" />
                <!-- Validation message for last name -->
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>

            <!-- Email Address Input -->
            <div class="form-group">
                <!-- Label for email address -->
                <label asp-for="emailAddress" class="control-label"></label>
                <!-- Input field for email address -->
                <input asp-for="emailAddress" class="form-control" />
                <!-- Validation message for email address -->
                <span asp-validation-for="emailAddress" class="text-danger"></span>
            </div>

            <!-- Phone Number Input -->
            <div class="form-group">
                <!-- Label for phone number -->
                <label asp-for="phoneNumber" class="control-label"></label>
                <!-- Input field for phone number -->
                <input asp-for="phoneNumber" class="form-control" />
                <!-- Validation message for phone number -->
                <span asp-validation-for="phoneNumber" class="text-danger"></span>
            </div>

            <!-- Birthdate Input -->
            <div class="form-group">
                <!-- Label for birthdate -->
                <label asp-for="birthdate" class="control-label"></label>
                <!-- Input field for birthdate -->
                <input asp-for="birthdate" class="form-control" />
                <!-- Validation message for birthdate -->
                <span asp-validation-for="birthdate" class="text-danger"></span>
            </div>

            <!-- Username Input -->
            <div class="form-group">
                <!-- Label for username -->
                <label asp-for="username" class="control-label"></label>
                <!-- Input field for username -->
                <input asp-for="username" class="form-control" />
                <!-- Validation message for username -->
                <span asp-validation-for="username" class="text-danger"></span>
            </div>

            <!-- Password Input -->
            <div class="form-group">
                <!-- Label for password -->
                <label asp-for="password" class="control-label"></label>
                <!-- Input field for password -->
                <input asp-for="password" class="form-control" />
                <!-- Validation message for password -->
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <!-- Submits the form to create a new user -->
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Link to return to the index/list page -->
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        // Jquery helper for client side validation
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
